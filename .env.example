# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Application environment (development, production, test)
NODE_ENV=development

# Port on which the application will run
PORT=3000

# API version prefix
API_VERSION=v1

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=drone_delivery

# Database synchronization (true for development, false for production)
# WARNING: Set to false in production to prevent accidental schema changes
DB_SYNCHRONIZE=true

# Database logging (true for development, false for production)
DB_LOGGING=true

# ==============================================
# JWT AUTHENTICATION CONFIGURATION
# ==============================================

# JWT Access Token Secret (use a strong, random string in production)
# Generate with: openssl rand -base64 64
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-this-in-production

# JWT Access Token Expiration (e.g., 15m, 1h, 1d)
JWT_ACCESS_EXPIRATION=15m

# JWT Refresh Token Secret (use a strong, random string in production)
# Generate with: openssl rand -base64 64
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production

# JWT Refresh Token Expiration (e.g., 7d, 30d)
JWT_REFRESH_EXPIRATION=7d

# ==============================================
# MQTT BROKER CONFIGURATION
# ==============================================

# MQTT Broker URL (protocol://host:port)
# For Docker: mqtt://emqx:1883
# For local: mqtt://localhost:1883
MQTT_BROKER_URL=mqtt://localhost:1883

# MQTT Client ID (unique identifier for this backend instance)
MQTT_CLIENT_ID=drone-delivery-backend

# Optional: MQTT Authentication (uncomment if your broker requires auth)
# MQTT_USERNAME=your-mqtt-username
# MQTT_PASSWORD=your-mqtt-password

# ==============================================
# CORS CONFIGURATION
# ==============================================

# Comma-separated list of allowed origins for CORS
# Use * for development only, specify exact origins in production
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# RATE LIMITING (Optional)
# ==============================================

# Maximum number of requests per time window
# RATE_LIMIT_MAX=100

# Time window in milliseconds
# RATE_LIMIT_WINDOW_MS=900000

# ==============================================
# LOGGING CONFIGURATION (Optional)
# ==============================================

# Log level (error, warn, info, debug, verbose)
LOG_LEVEL=info

# ==============================================
# DOCKER-SPECIFIC CONFIGURATION
# ==============================================
# These values are used when running with docker-compose
# Uncomment and modify if needed

# DB_HOST=postgres
# MQTT_BROKER_URL=mqtt://emqx:1883
